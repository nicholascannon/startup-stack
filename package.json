{
  "name": "startup-stack",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@startup-stack/shared && npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present -- --watch=false",
    "dev": "concurrently -n \"server,frontend\" -c \"blue,green\" \"npm run dev --workspace=@startup-stack/server\" \"npm run dev --workspace=@startup-stack/frontend\"",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=24.11.0"
  }
}
